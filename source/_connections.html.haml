.connections
  %h5.name Connections
  - connections(flight.id).each do |connection|
    .connection{ data: { 'connection-id' => connection.id } }
      .connection-location
        = partial('airport', locals: { airport: airport(connection.connection_airport_id) })
      .flight-number= connection.flight_number
      .connection-arrival-time= Time.strptime(connection.connection_arrival_time, '%Y-%m-%dT%H:%M:%S%Z').strftime('%l:%M %p')
      .connection-departure-time= Time.strptime(connection.connection_departure_time, '%Y-%m-%dT%H:%M:%S%Z').strftime('%l:%M %p')
      .connection-layover-duration= connection.connection_layover_duration
      .connection-duration= connection.connection_duration
